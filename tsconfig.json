{
  "compilerOptions": {
    "allowJs": true,
    "alwaysStrict": true,
    "checkJs": true,
    "declaration": true,
    "incremental": true,
    "target": "ESNext",
    "rootDir": "./",
    "outDir": "dist/",
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "importHelpers": true,
    "forceConsistentCasingInFileNames":true,
    "removeComments":true,
    "strict":true,
  },
  "exclude": ["dist/"]
}
